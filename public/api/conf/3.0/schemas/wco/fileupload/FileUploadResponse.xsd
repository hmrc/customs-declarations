<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="hmrc:fileupload2" xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="hmrc:fileupload2" elementFormDefault="qualified">

    <xs:element name="FileUploadResponse" type="FileUploadResponse"/>

    <xs:complexType name="FileUploadResponse">
        <xs:sequence>
            <xs:element name="files" type="Files"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Files">
        <xs:sequence>
            <xs:element minOccurs="1" maxOccurs="unbounded" name="file" type="File"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="File">
        <xs:all>
            <xs:element minOccurs="1" name="reference" type="xs:string"/>
            <xs:element minOccurs="1" name="uploadRequest" type="UploadRequest"/>
        </xs:all>
    </xs:complexType>

    <xs:complexType name="UploadRequest">
        <xs:all>
            <xs:element minOccurs="1" name="href" type="xs:string"/>
            <xs:element minOccurs="1" name="fields">
                <xs:complexType>
                    <xs:all>
                        <xs:element minOccurs="0" name="Content-Type" type="xs:string"/>
                        <xs:element minOccurs="0" name="acl" type="xs:string"/>
                        <xs:element minOccurs="0" name="key" type="xs:string"/>
                        <xs:element minOccurs="0" name="policy" type="xs:string"/>
                        <xs:element minOccurs="0" name="x-amz-algorithm" type="xs:string"/>
                        <xs:element minOccurs="0" name="x-amz-credential" type="xs:string"/>
                        <xs:element minOccurs="0" name="x-amz-date" type="xs:string"/>
                        <xs:element minOccurs="0" name="x-amz-meta-callback-url" type="xs:string"/>
                        <xs:element minOccurs="0" name="x-amz-signature" type="xs:string"/>
                    </xs:all>
                </xs:complexType>
            </xs:element>
        </xs:all>
    </xs:complexType>

</xs:schema>
